datasource db {
  provider = "postgresql"
  // url は環境変数から読む想定
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Candidate {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  // ===== プロフィール情報（表示/登録できる） =====
  nationality           String? // 国籍
  japaneseLevel         String? // 日本語レベル（N1〜N5）
  skills                String? // スキル（カンマ区切りなど）
  visaStatus            String? // VISAステータス

  currentJobType        String? // 現在の職種（特定技能など）
  skillTest             String? // 職能試験
  unionName             String? // 所属組合
  registeredOrg         String? // 所属登録機関

  selfPr                String? // 自己PR（文章）
  introVideoUrl         String? // 自己紹介動画（URL）

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  applications Application[]
  scouts       Scout[]
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  country   String
  city      String?
  website   String?
  createdAt DateTime @default(now())

  jobs   Job[]
  scouts Scout[]
}

model Job {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  location         String
  requiredLanguage String
  requiredSkills   String
  visaSupport      Boolean
  createdAt        DateTime @default(now())

  companyId Int
  company   Company @relation(fields: [companyId], references: [id])

  applications Application[]
}

model Scout {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())

  companyId   Int
  candidateId Int

  company   Company   @relation(fields: [companyId], references: [id])
  candidate Candidate @relation(fields: [candidateId], references: [id])
}

model Application {
  id        Int      @id @default(autoincrement())
  message   String?
  createdAt DateTime @default(now())

  status ApplicationStatus @default(PENDING)

  jobId       Int
  candidateId Int

  job       Job       @relation(fields: [jobId], references: [id])
  candidate Candidate @relation(fields: [candidateId], references: [id])
}

enum ApplicationStatus {
  UNCONFIRMED
  DOCUMENT
  FIRST
  SECOND
  APTITUDE
  FINAL
  OFFER
  REJECT
  PENDING
  ACCEPTED
  REJECTED
}
