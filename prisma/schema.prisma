datasource db {
  provider = "postgresql"
  // url は環境変数から読む想定
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Candidate {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  // ===== プロフィール情報（表示/登録できる） =====
  nationality           String? // 国籍
  japaneseLevel         String? // 日本語レベル（N1〜N5）
  skills                String? // スキル（カンマ区切りなど）
  visaStatus            String? // VISAステータス

  currentJobType        String? // 現在の職種（特定技能など）
  skillTest             String? // 職能試験
  unionName             String? // 所属組合
  registeredOrg         String? // 所属登録機関

  selfPr                String? // 自己PR（文章）
  introVideoUrl         String? // 自己紹介動画（URL）

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  applications Application[]
  scouts       Scout[]
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  country   String
  city      String?
  website   String?
  createdAt DateTime @default(now())

  // ===== 企業プロフィール =====
  companyLogo          String?   // ロゴURL
  overview             String?   // 会社概要（300-500文字）
  foundedYear          Int?      // 設立年月（年のみ）
  capital              String?   // 資本金
  employees            Int?      // 従業員数
  representative       String?   // 代表者名
  headquarters         String?   // 本社所在地

  // ===== 募集・雇用情報 =====
  recruitmentTypes     String?   // 募集職種（カンマ区切り）
  recruitmentTarget    String?   // 募集対象（新卒/中途/外国人可など）
  employmentType       String?   // 雇用形態（正社員・契約社員など）
  workLocation         String?   // 勤務地（都道府県/リモート可否）
  workingHours         String?   // 勤務時間・休日
  initialSalary        String?   // 初任給（目安）
  annualSalary         String?   // 想定年収レンジ
  bonusInfo            String?   // 昇給・賞与（回数・実績）

  // ===== 福利厚生 =====
  benefits             String?   // 福利厚生全般
  socialInsurance      String?   // 社会保険
  housingAllowance     String?   // 住宅手当
  transportationAllowance String? // 交通費
  training             String?   // 研修制度
  certificateSupport   String?   // 資格支援

  // ===== 職場環境・ワークライフバランス =====
  avgAge               String?   // 平均年齢
  genderRatio          String?   // 男女比
  overtimeHours        String?   // 残業時間の目安
  vacationRate         String?   // 有給取得率
  remoteFlexible       String?   // リモート／フレックス有無

  // ===== 外国人採用・VISA対応 =====
  foreignerHiringRecord String?  // 外国人採用実績（あり/なし）
  visaSupport          String?   // VISAサポート（可/不可/条件付き）
  internalLanguage     String?   // 社内公用語（日本語/英語）
  japaneseLevel        String?   // 日本語レベルの目安（N2以上など）
  acceptedNationality  String?   // 受け入れ国籍（制限あれば）
  livingSupport        String?   // 生活サポート（住居/手続き支援）

  jobs   Job[]
  scouts Scout[]
}

model Job {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  location         String
  requiredLanguage String
  requiredSkills   String
  visaSupport      Boolean
  createdAt        DateTime @default(now())

  companyId Int
  company   Company @relation(fields: [companyId], references: [id])

  applications Application[]
}

model Scout {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())

  companyId   Int
  candidateId Int

  company   Company   @relation(fields: [companyId], references: [id])
  candidate Candidate @relation(fields: [candidateId], references: [id])
}

model Application {
  id        Int      @id @default(autoincrement())
  message   String?
  createdAt DateTime @default(now())

  status ApplicationStatus @default(PENDING)

  jobId       Int
  candidateId Int

  job       Job       @relation(fields: [jobId], references: [id])
  candidate Candidate @relation(fields: [candidateId], references: [id])
}

enum ApplicationStatus {
  UNCONFIRMED
  DOCUMENT
  FIRST
  SECOND
  APTITUDE
  FINAL
  OFFER
  REJECT
  PENDING
  ACCEPTED
  REJECTED
}
